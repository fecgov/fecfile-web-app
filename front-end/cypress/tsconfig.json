{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "sourceMap": false,
    "target": "ES2024",
    "module": "ESNext",
    "lib": ["ES2024", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": [
      "cypress",
      "@testing-library/cypress"
    ],
    "moduleResolution": "Node"
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.d.ts"]
}